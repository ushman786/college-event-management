<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Event Details</title>
    <style>
        /* Add your CSS styles here */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            overflow: hidden;
        }

        video {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -1;
        }

        h1 {
            color: #fff;
            font-size: 32px;
            margin-top: 20px;
            z-index: 1;
        }

        #cardContainer {
            max-height: 80vh;
            overflow-y: auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .event-card {
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            margin: 20px;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.8);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            z-index: 1;
        }

        .event-card:hover {
            transform: scale(1.05);
        }

        .event-card img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 10px;
            object-fit: cover;
            cursor: pointer;
        }

        .event-card h2 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #333;
        }

        .event-card p {
            margin: 5px 0;
            color: #666;
        }

        .event-card button {
            background-color: #61a0a8;
            color: #fff;
            border: none;
            padding: 10px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .event-card button:hover {
            background-color: #4b7c82;
        }

        .event-details {
            display: none;
            margin-top: 10px;
        }

        .event-details p {
            margin: 5px 0;
            color: #333;
        }

        .register-button {
            margin-top: 20px;
        }

        .register-button a.register-button-link {
            background-color: #61a0a8;
            color: #fff;
            border: none;
            padding: 10px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s;
            text-decoration: none; /* Add this to remove underlines */
        }

        .register-button a.register-button-link:hover {
            background-color: #4b7c82;
        }
    </style>
</head>

<body>
    <video autoplay muted loop>
        <source src="https://cdn.pixabay.com/vimeo/726548063/stage-123016.mp4?width=1280&hash=c77b19ae97383d8d7982eeba99f4abec443b42f3"
            type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <h1>Event Details</h1>

    <!-- Container for event cards -->
    <div id="cardContainer"></div>

    <script>
        // Function to navigate to event details page
        function navigateToDetails(eventId) {
            window.location.href = '/event-details.html?eventId=' + eventId;
        }

        // Your JavaScript code remains unchanged
        // Extract the encoded data from the query parameter
        const queryParams = new URLSearchParams(window.location.search);
        const encodedData = queryParams.get('data');

        // Decode the data and parse it as JSON
        const jsonString = decodeURIComponent(encodedData);
        const eventData = JSON.parse(jsonString);

        // Function to create and display cards
        function displayEventCards() {
            const container = document.getElementById('cardContainer');

            // Loop through each event in the data and create a card
            eventData.forEach(event => {
                const card = document.createElement('div');
                card.classList.add('event-card');
                card.innerHTML = `
                    <div style="position: relative;">
                        <img src="${event.poster}" alt="${event.eventName}" onclick="navigateToDetails('${event._id}')">
                        <h2>${event.eventName}</h2>
                        <p>Event Type: ${event.eventType}</p>
                        <!-- Add other properties as needed -->
                        <button onclick="toggleEventDetails('${event._id}')">Print Event Data</button>
                        <div class="event-details" id="${event._id}Details">
                            <p>Event Description : ${event.eventdescription}</p>
                            <p>Event From Date: ${new Date(event.eventFromDate).toLocaleDateString()}</p>
                            <p>Event To Date: ${new Date(event.eventToDate).toLocaleDateString()}</p>
                            <p>Registration Start Date: ${new Date(event.registrationStartDate).toLocaleDateString()}</p>
                            <p>Registration End Date: ${new Date(event.registrationEndDate).toLocaleDateString()}</p>
                            <p>Participants : ${event.participateGroup}</p>
                            <p>Event By : ${event.eventby}</p>
                            <p>Institution Name : ${event.institutionName}</p>
                            <p>College Website : ${event.collegeWebsite}</p>
                            <p>Contact Coordinator : ${event.contactCoordinator}</p>
                            <p>Contact Email : ${event.contactemail}</p>
                            <div class="register-button">
                                 <a  href="/register/${event._id}" class="register-button-link">Register</a>
                            </div>
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        // Function to toggle the visibility of event details
        function toggleEventDetails(eventId) {
            const detailsDiv = document.getElementById(`${eventId}Details`);
            detailsDiv.style.display = detailsDiv.style.display === 'none' ? 'block' : 'none';
        }

        // Call the displayEventCards function when the page loads
        window.onload = displayEventCards;
    </script>
</body>

</html>
